{
  "version": 2,
  "name": "dnd-chat-game",
  "builds": [
    {
      "src": "dnd-frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/dnd-frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@supabase-url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@supabase-anon-key",
    "NEXT_PUBLIC_AI_SERVICE_URL": "@ai-service-url"
  },
  "functions": {
    "dnd-frontend/pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "installCommand": "cd dnd-frontend && npm install",
  "buildCommand": "cd dnd-frontend && npm run build",
  "outputDirectory": "dnd-frontend/.next",
  "framework": "nextjs"
}
